<h1>Listing Categories</h1>
<%= link_to 'New Category', new_admin_category_path %><br />
<table>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td><%= link_to 'Sub Categories', sub_categories_admin_categories_path(:id => category.id ) %> |
				<%= link_to 'Edit', edit_admin_category_path(category) %> |
				<%= link_to 'Destroy',"#", :confirm => 'Are you sure?', :method => :delete %>
			</td>
		</tr>
	<% end %>
</table>


