<h1>Listing News</h1>
<%#= link_to 'New Category', new_admin_category_path %><br />
<table>
  <tr>
    <th>Title</th>
    <th> Status</th>
    <th>Actions</th>
  </tr>

  <% @news.each do |news| %>
      <tr>
        <td><%=link_to news.title, admin_news_path(:id => news.id) %></td>
        <th><%= news.is_approved %></th>
        <td><%= link_to 'Edit', edit_admin_news_path(news) %> |
          <%= link_to 'Destroy', "#", :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
  <% end %>
</table>
