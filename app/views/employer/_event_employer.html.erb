<div id="event-form" title="Create an Event">

  <%= form_for :event, :url =>{ :action => 'create_event' }, :html =>{ :id => 'add_event_form' }, :remote => true do |f| %>
      <div class="job-input">
        <%= hidden_field_tag :employer_id, @employer.id %>
        <label>Title</label>
        <%= f.text_field :name %>
      </div>
      <div class="job-input">
        <label>Venue</label>
        <%= f.text_field :place %>
      </div>
      <div class="job-input">
        <label>Event Picture</label>
        <%= fields_for :asset do |asset| %>
            <%= asset.file_field :photo %>
        <% end %>
      </div>
      <div class="job-input">
        <label>Start Time</label>
        <%= f.text_field :time_of_start, :class =>"date-pick" %>
      </div>
      <div class="job-input">
        <label>End Time</label>
        <%= f.text_field :time_of_end, :class =>"date-pick" %>

      </div>
      <div class="job-input-description">
        <label>Description</label>
        <%= f.text_area :description %>
      </div>

  <% end %>


</div>


<script type="text/javascript">

    $(document).ready(function() {
        $('.date-pick').datepicker({dateFormat: 'yy-mm-dd'});
    });

    $("#create-event").click(function() {
        $("#event-form").dialog("open");
    });

    $("#event-form").dialog({
        autoOpen: false,
        height: 300,
        width: 350,
        modal: true,
        buttons: {

            Cancel: function() {
                $(this).dialog("close");
            },
            "Create an Event": function() {
                $.post($("form#add_event_form").attr("action"), $("form#add_event_form").serialize(), (function(response) {
                    return $(".dashboard-content-right").html(response.html);
                }), "json");
                return false;

            }}
    });

</script>