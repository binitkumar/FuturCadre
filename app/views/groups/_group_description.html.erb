<div class="join-request">
  <div class="w100">
    <div class="groups-heading-hold">

      <h1><%= @group.name %></h1>

      <p> <%= @group.created_at.strftime("%d-%m-%Y") %> </span> -
        <span class="red"> <%= @group.users.count %></span> <%= link_to "Members", group_members_groups_path(:id => @group.id, :sid => "members"), :class => "members_link" ,:style =>"text-decoration: none;" %> -
        <span class="red"> <%= @group.jobs.count %> </span> <%= link_to "Jobs", group_jobs_groups_path(:id => @group.id, :sid => "jobs"), :class => "offers-link",:style =>"text-decoration: none;" %></p>
    </div>
    <% if !user_signed_in? %>
        <div class="join-group-hold"><%= link_to_function "Join Group", "join_request(#{@group.id});" %></div>
    <% elsif current_user.is_member(@group.id)== false %>
        <div class="join-group-hold"><%= link_to_function "Join Group", "join_request(#{@group.id});" %></div>
    <% end %>
  </div>

  <div class="group-details-hold">
    <div class="grpup-img-hold"></div>
    <div class="grpup-img-details-hold"><%= @group.description %>
    </div>
  </div>
</div>