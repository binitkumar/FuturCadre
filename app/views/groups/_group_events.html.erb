<script language="JavaScript">
    $(document).ready(function () {
        $('.date-pick').datetimepicker({dateFormat:'yy-mm-dd', timeFormat:"hh:mm tt"});

    });

    $("#event-form").dialog({
        autoOpen:false,
        height:300,
        width:350,
        modal:true,
        buttons:{

            Cancel:function () {
                $(this).dialog("close");
            },
            "Create a Event":function () {
                $.post($("form#add_event_form").attr("action"), $("form#add_event_form").serialize(), (function (response) {
                    return $(".mid-cont-holder").html(response.html);
                }), "json");
                $("#event-form").dialog("close");
                return false;

            }}
    });

    $("#event-popup").click(function () {
        $("#event-form").dialog("open");
    });

</script>
<div class="mid-cont-holder">
  <div id="question_answer">
    <% unless current_user.blank? %>
        <button id="event-popup" class="question-button">Create Events</button>
    <% end %>


    <div class="right-content-detail-new">

      <% unless @group.events.blank? %>
          <% @group.events.each do |group_event| %>

              <div class="content-detail">

                <h1>
                  <div id="group_event" onclick="event_page('<%= group_event.id%>','<%=@group.id %>')"><%= group_event.title %></div>
                </h1>

                <div><%= group_event.created_at.strftime("%d-%m-%Y") %></div>
                <div><label> Time:</label> <%= group_event.time_of_start %></div>
                <div><label> Time:</label> <%= group_event.time_of_end %></div>
                <div><label>Descripton:</label></div>
                <div id="text-detail">
                  <p><%= group_event.description %></p>
                </div>


              </div>
              <div id="answer_button" onclick="post_event('<%= group_event.id%>')"></div>
          <% end %>

          </div><!--right-content ends-->
      <% end %>
      </div>
  <div id="event-form" title="Create a New Event">

    <%= form_for :event, :url => { :action => 'create_event' }, :html => { :id => 'add_event_form' }, :remote => true do |f| %>
        <div class="input-holder">
          <%= hidden_field_tag :group_id, @group.id %>
          <label>Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="input-holder">
          <label>Start Time</label>
          <%= f.text_field :time_of_start, :class => "date-pick" %>
        </div>
        <div class="input-holder">
          <label>End Time</label>
          <%= f.text_field :time_of_end, :class => "date-pick" %>
        </div>
        <div class="input-holder">
          <label>Message</label>
          <%= f.text_area :description %>
        </div>

    <% end %>


  </div>
</div>

</div>

<script type="text/javascript">

    function event_page(event_id, group_id) {

        url = "/groups/event_page?id=" + event_id + '&group_id=' + group_id;
        $.ajax({
            context:this,
            url:url,
            type:"GET",
            data:$(this).serialize(),
            dataType:"json",
            success:function (response) {
                $(".mid-cont-holder").html(response.html);
            }
        });
        return false;

    }

</script>

