<div class="content-holder">
  <div class="basic-info mtop10">
    <div class="reg-tab-holder">
      <div class="reg-tab-holder-new tab-act">
        <div class="reg-left-tab-holder"></div>
        <div class="reg-mid-tab-holder"><%= link_to "Home" %></div>
        <div class="reg-right-tab-holder"></div>
      </div>

      <div class="reg-tab-holder-new">
        <div class="reg-left-tab-holder"></div>
        <div class="reg-mid-tab-holder"><%= link_to "My Resumes", resume_index_job_seeker_index_path(:id => @job_seeker), :class => "resume-index" %></div>
        <div class="reg-right-tab-holder"></div>
      </div>
      <div class="reg-tab-holder-new">
        <div class="reg-left-tab-holder"></div>
        <div class="reg-mid-tab-holder"><%= link_to "My Jobs", job_seeker_jobs_job_seeker_index_path(:id => @job_seeker), :class => "job-seeker-job" %></div>
        <div class="reg-right-tab-holder"></div>
      </div>
      <div class="reg-tab-holder-new">
        <div class="reg-left-tab-holder"></div>
        <div class="reg-mid-tab-holder" style="color: #000000; text-decoration: underline;" id="thesis" onclick="my_thesis('<%= @job_seeker.id %>')">
          My Theses
        </div>
        <div class="reg-right-tab-holder"></div>
      </div>
      <div class="reg-tab-holder-new">
        <div class="reg-left-tab-holder"></div>
        <div class="reg-mid-tab-holder"><%= link_to "My Projects", my_projects_projects_path(:id => @job_seeker), :class => "project_path" %></div>
        <div class="reg-right-tab-holder"></div>
      </div>


    </div>

    <h1>JobSeeker<span class="red"> Dashboard</span></h1>
    <%= image_tag asset_path 'basic-info-bot-bar.png' %>

  </div>
  <!--9-1-2012 add touseef ahmad-->
  <% unless @job_seeker.blank? %>

      <div class="dashboard-left">
        <div class="dashboard-info-image">
          <div class="dashboard-image">
            <% if @job_seeker.profile.present? %>

                <% if profile_image != false %>
                    <%= image_tag profile_image.photo.url %>
                <% else %>
                    <%= image_tag asset_path "dashboard-img.png" %>
                <% end %>
                <h1> <%= @job_seeker.profile.full_name %></h1>
            <% else %>
                <h1>  <%= @job_seeker.name %> </h1>

                <p>.</p>

            <% end %>
          </div>
        </div>
        <!--dashboard-info-image ends-->

      </div>

      <!--dashboard-info-image ends-->
      <div class="dashboard-content-right">
        <div class="w100">
          <div class="dashboard-post-profile-btn">


            <!-- <a href="#"> <%#= image_tag asset_path 'search-profile.png' %>
            </a>-->
          </div>
        </div>
        <!--dashboard-post-profile-btn ends-->
        <div class="dashboard-content">
          <h1>Dashboard</h1>

          <%= image_tag asset_path 'dashboard-botom-line.png' %>
          <p><b>Welcome <%= @job_seeker.name %></b></p>

          <p><br/>


          </p>

          <h1>My<span class="red"> Jobs</span></h1>

          <%= image_tag asset_path 'dashboard-botom-line.png' %>
          <p>.</p>

          <!--  <a href="#">see all</a>  -->

          <h1>My<span class="red"> Statistics</span></h1>

          <%= image_tag asset_path 'dashboard-botom-line.png' %>
          <p><label>Total Jobs Applied</label> <%= @job_seeker.applied_jobs.count %><br/>


          <div class="buttons w100">

            <!--   <div class="btn-left-holder"></div>
           <div class="btn-mid-holder">0 profile (s) (s) selected</div>
           <div class="btn-right-holder"></div>
           <div class="btn-left-holder"></div>
           <div class="btn-mid-holder">0 profile (s) contacted (s)</div>
           <div class="btn-right-holder"></div>-->

          </div>
          <!--  <a href="#">see all</a> -->

          <h1>My<span class="red"> Subscription</span></h1>
          <%= image_tag asset_path 'dashboard-botom-line.png' %>

          <p>Future Cadre is free and without obligation until January 31, 2012. Enjoy!<br/>
        </div>
      </div>
      <!--dashboard-content-right ends-->

  <% end %>
</div>

<script type="text/javascript">
    $("a.job-seeker-job").click(function () {

        $.ajax({
            context:this,
            url:$(this).attr("href"),
            type:"GET",
            data:$(this).serialize(),
            dataType:"json",
            success:function (response) {
                return $(".dashboard-content-right").html(response.html);
            }
        });
        return false;

    });
    $("a.resume-index").click(function () {

        $.ajax({
            context:this,
            url:$(this).attr("href"),
            type:"GET",
            data:$(this).serialize(),
            dataType:"json",
            success:function (response) {
                return $(".dashboard-content-right").html(response.html);
            }
        });
        return false;

    });

    $("a.event-holder").click(function () {

        $.ajax({
            context:this,
            url:$(this).attr("href"),
            type:"GET",
            data:$(this).serialize(),
            dataType:"json",
            success:function (response) {
                return $(".dashboard-content-right").html(response.html);
            }
        });
        return false;

    });


    function my_thesis(job_id) {
        url = "/job_seeker/my_theses?id=" + job_id;
        $.ajax({
            context:this,
            url:url,
            type:"GET",
            data:$(this).serialize(),
            dataType:"json",
            success:function (response) {
                $(".dashboard-content-right").html(response.html);
            }
        });
        return false;


    }

    $("a.project_path").click(function () {

        $.ajax({
            context:this,
            url:$(this).attr("href"),
            type:"GET",
            data:$(this).serialize(),
            dataType:"json",
            success:function (response) {
                return $(".dashboard-content-right").html(response.html);
            }
        });
        return false;

    });


</script>


