<div class="content-left-holder">
  <div class="w100">
    <div class="search-results">Job Form</div>
    <!--    <div class="data-post-div"></div>-->

    <div class="search-line"></div>
  </div>


  <div class="result-holder">

      <%= form_for :job, :url =>{:action => 'apply_job'}, :html =>{:id => 'apply_job_form'}, :remote => true do |f| %>

          <%= hidden_field_tag :job_id, @job.id %>

          <% unless @cvs.blank? %>
            <label>CV</label>
              <% @cvs.each do |cv| %>

                  <div class="input-holder">
                      <div style="">
                      <%= radio_button_tag :"cv_id", cv.id %>
                    </div>
                    <div> <%= cv.photo_file_name %></div>
              <% end %>
              </div>
          <% end %>
           <%= f.submit %>
      <% end %>
    </div>

  </div>





<script type="text/javascript">

    $('a.application').click(function() {
          $('#apply_job_form').ajaxSubmit({
            beforeSubmit: function(a, f, o) {
                o.dataType = 'json';
            },
            success: function(data) {

                $(".dashboard-content-right").html(data.html);


            }
        });
          return false;
      });

</script>