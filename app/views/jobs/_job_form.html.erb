<%= javascript_include_tag "date.js", "jquery.datePicker.js" %>
<div class="dashboard-right-content">

  <div class="dashboard-content-right">
    <div class="basic-new-info-writting-img">
      <a href="#">
        <%= image_tag asset_path 'basic-new-info-writting-img.png' %>
      </a>
    </div>
    <div class="basic-new-info-publication-img">
      <a href="#">
        <%= image_tag asset_path 'basic-new-info-publication-img.png' %>
      </a>
    </div>
  </div>
  <!--dashboard-post-profile-btn ends-->
  <div class="dashboard-right-content">

    <h1><span>I Publish</span> an offer</h1>
    <%= image_tag asset_path 'dashboard-botom-line.png' %>
    <div class="dashboard-right-left">
      <div class="job-input">
        <label><%= t('jobs.name') %></label>
        <%= f.text_field :name %>
      </div>

      <div class="job-input-description">
        <label><%= t('jobs.description') %></label>
        <%= f.text_field :description %>
      </div>


      <div class="job-input">
        <%= f.radio_button 'annual_salary', 'Negotiable' %>Negotiable</label>
        <%= f.radio_button 'annual_salary', 'Non' %> <label> Non</label>
        <%= f.radio_button 'annual_salary', '', :class => "checked-radio" %> <label> Oui</label>
        <%= f.text_field :annual_salary, :disabled => true, :id => "textBox" %>

      </div>

    </div>
    <!--dashboard-right-left ends-->
    <div class="dashboard-right-right">
      <div class="job-input-select">
        <label>Contract</label>
        <%= select_tag :contract_id, options_from_collection_for_select(Contract.all, "id", "name") %>
      </div>
      <div class="job-input">
        <label>Contract</label>
        <%= select_tag :period_id, options_from_collection_for_select(Period.all, "id", "name") %>
      </div>
    </div>
    <div class="job-input">
      <label>Start Date</label>
      <%= f.text_field :date_of_start, :class =>"date-pick" %>

    </div>
    <div class="job-input-country">
      <label>Country</label>

      <input type="text" value=""/>
    </div>
    <div class="job-input">
      <label> Job Category</label>
      <%= select_tag :category_id, options_from_collection_for_select(Category.all, "id", "name") %>
    </div>
    <div class="job-input">
      <label>Employer Type</label>

      <input type="text" value=""/>
    </div>
  </div>
  <!--dashboard-right-right-->
  <div class="clear"></div>

  <div class="job-resp">
    <h1><span>Company</span> Information </h1>
    <%= image_tag asset_path 'dashboard-botom-line.png' %>
  </div>
  <% if @employer.profile.present? %>
      <div class="dashboard-right-left">
        <div class="job-input-add">
          <label>Add a Responsibility</label>
          <input type="text" value=""/>
        </div>
      </div>
      <div class="dashboard-right-right">
        <div class="skill-content">
          <div class="job-input-country">

            <label>Country</label>
            <input type="text" value=""/>
          </div>
          <div class="job-input-country">
            <label>Country</label>
            <input type="text" value=""/>
          </div>
          <div class="job-input-city">

            <label>City</label>
            <input type="text" value=""/>
          </div>
        </div>
      </div>
  <% else %>
      <div class="dashboard-right-left">
        <div class="job-input-add">
          <label>Company Name</label>

        </div>
      </div>
      <div class="dashboard-right-right">
        <div class="skill-content">
          <div class="job-input-country">

            <label>Country</label>
            <input type="text" value=""/>
          </div>
          <div class="job-input-country">
            <label>Country</label>
            <input type="text" value=""/>
          </div>
          <div class="job-input-city">

            <label>City</label>
            <input type="text" value=""/>
          </div>
        </div>
      </div>
  <% end %>
  <div class="clear"></div>


  <div class="job-skill">

    <h1><span>Job</span> Skills</h1>
    <%= image_tag asset_path 'dashboard-botom-line.png' %>
  </div>

  <div class="dashboard-right-left">

    <div class="job-input">
      <label>Add a Skills</label>
      <input type="text" value=""/>
    </div>

    <div class="job-input-description">
      <label>Description</label>
      <input type="text" value=""/>
    </div>

  </div>
  <!--dashboard-right-left-->
  <div class="dashboard-right-right">
    <div class="skill-content">
      <div class="job-input-country">

        <label>Country</label>
        <input type="text" value=""/>
      </div>
      <div class="job-input-country">
        <label>Country</label>
        <input type="text" value=""/>
      </div>
      <div class="job-input-city">

        <label>City</label>
        <input type="text" value=""/>
      </div>
    </div>
  </div>

  <!--dashboard-right-right-->

  <div class="clear"></div>
  <div class="btn-save">
    <div class="apply-left"></div>
    <div class="apply-mid">Save</div>

    <div class="apply-right"></div>
  </div>


</div>
<!--dashboard-content-right ends-->


</div>

<script type="text/javascript">

    $('.checked-radio').click(function() {
        document.getElementById("textBox").value = null;
        document.getElementById('textBox').disabled = false;


    });
    $(document).ready(function() {
        $(function() {
            $('.date-pick').datePicker();
        });
    });

</script>