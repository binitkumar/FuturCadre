        scntDiv.append(txt_field);

    });
    function remove_location_field(obj) {
        var field = $('#main_div_' + obj)
        var count = parseInt($('#count').attr('value'));
        var count_toatl = parseInt($('#count').attr('value'));
        count = count - 1;
        $('#count').attr('value', count);
        field.remove();
    }
   var counter = 1;
