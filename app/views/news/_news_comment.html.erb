<%= form_for :comment, :url => { :action => 'news_comment' }, :html => { :id => 'add_news_comment_form', :onsubmit => "return false;" } do |f| %>
    <%= f.text_area :comment %>
    <%= hidden_field_tag :news_id, @news.id %>
    <%= link_to t('post'), "javascript:void(0)", :id => "add_comment_button" %>

<% end %>
