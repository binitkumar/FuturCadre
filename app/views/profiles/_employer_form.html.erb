<% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this Profile from being saved:</h2>

      <ul>
        <% @profile.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<% if @company_information.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company_information.errors.count, "error") %> prohibited this Profile from being saved:</h2>

      <ul>
        <% @company_information.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="reg-tab-holder">
  <div class="reg-tab-holder-new tab-act">
    <div class="reg-left-tab-holder"></div>
    <div class="reg-mid-tab-holder"><%= t('home_my_account') %></div>
    <div class="reg-right-tab-holder"></div>
  </div>
</div>

<div class="basic-info mtop10">
  <h1> <%= t('basic') %> <span class="red"> <%= t('information') %></span></h1>
  <%= image_tag asset_path 'basic-info-bot-bar.png' %>
</div>

<div class="w100">
  <div class="profile-left-div">
    <div class="profile-input mtop20">
      <label><%= t('profiles.first_name') %></label>
      <%= f.text_field :first_name %>
    </div>
    <div class="profile-input mtop20">
      <label><%= t('profiles.phone') %></label>
      <%= f.text_field :phone %>
    </div>
    <div class="profile-input mtop20">
      <label><%= t('profiles.zip') %></label>
      <%= f.text_field :zip_code %>
    </div>
    <div class="profile-input mtop20">
      <label><%= t('profiles.region') %></label>

      <div id="regions">
        <%= render :partial => "shared/regions", :locals => { :object_collection => "profile" } %>
      </div>
    </div>
    <div class="profile-input mtop20">
      <label><%= t('profiles.profile_picture') %></label>
      <%= fields_for :asset do |asset| %>
          <%= asset.file_field :photo %>
      <% end %>
    </div>

  </div>
  <div class="profile-right-div">
    <div class="profile-input mtop20">
      <label><%= t('profiles.last_name') %></label>
      <%= f.text_field :last_name %>
    </div>
    <div class="profile-input mtop20">
      <label><%= t('profiles.address') %></label>
      <%= f.text_field :address %>
    </div>

    <div class="profile-input mtop20">
      <label><%= t('profiles.country') %></label>

      <div id="country">

        <%= render :partial => "shared/countries", :locals => { :object_collection => "profile" } %>
      </div>
    </div>


    <div class="profile-input mtop20">
      <label><%= t('profiles.city') %></label>

      <div id="cities">
        <%= render :partial => "shared/cities", :locals => { :object_collection => "profile" } %>
      </div>
    </div>
  </div>
</div>

<div class="basic-info mtop40">
  <h1><%= t('company') %>  <span class="red"> <%= t('information') %> </span></h1>
  <%= image_tag asset_path 'basic-info-bot-bar.png' %>
</div>

<div class="w100">

  <%= fields_for :company_information do |ed| %>

      <div class="profile-left-div">
        <div class="profile-input mtop20">
          <label><%= t('profile_company_nam') %></label>
          <%= ed.text_field :name %>
        </div>

        <div class="profile-input mtop20">
          <label><%= t('profiles.phone') %></label>
          <%= ed.text_field :phone %>
        </div>
      </div>
      <div class="profile-right-div" style="margin-top: 5px;">

        <div class="profile-input mtop20">
          <label><%= t('category') %> </label>

          <div style=" margin-top:5px !important;">  <%= ed.select :sector_id, options_from_collection_for_select(Sector.all, "id", "value"), :class => "reg-slt-div-new" %>
          </div>
        </div>
        <div class="profile-input mtop20">
          <label><%= t('profiles.fax') %></label>
          <%= ed.text_field :fax %>
        </div>

        <div class="profile-input mtop20">
          <label><%= t('profiles.website') %></label>
          <%= ed.text_field :web_site %>
        </div>
      </div>

      <div class="profile-left-div">
        <div class="profile-input mtop20">
          <label><%= t('profiles.email') %></label>
          <%= ed.text_field :email %>
        </div>
        <div class="profile-input mtop20">
          <label><%= t('profiles.address') %></label>
          <%= ed.text_field :address %>
        </div>


        <div class="profile-input mtop20">
          <label><%= t('companyinfo.region') %></label>

          <div id="regions_org">
            <%= render :partial => "shared/regions", :locals => { :object_collection => "company_information" } %>
          </div>
        </div>
        <div class="profile-input mtop20">
          <label> <%= t('profiles.picture') %></label>
          <%= fields_for :org_photo do |org| %>
              <%= org.file_field :photo %>
          <% end %>
        </div>

      </div>

      <div class="profile-right-div">

        <div class="profile-input mtop20">
          <label><%= t('companyinfo.country') %></label>

          <div id="country_org">
            <%= render :partial => "shared/countries", :locals => { :object_collection => "company_information" } %>
          </div>
        </div>

        <div class="profile-input mtop20">
          <label><%= t('companyinfo.city') %></label>

          <div id="cities_org">
            <%= render :partial => "shared/cities", :locals => { :object_collection => "company_information" } %>
          </div>
        </div>


      </div>
  <% end %>
</div>




