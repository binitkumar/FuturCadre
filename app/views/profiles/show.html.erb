<%= render :partial => "shared/top_search_ box" %>
<div class="content-holder">

  <div class="reg-tab-holder">
    <div class="reg-tab-holder-new tab-act">
      <div class="reg-left-tab-holder"></div>
      <div class="reg-mid-tab-holder"><%= t('home_my_account') %></div>
      <div class="reg-right-tab-holder"></div>
    </div>
  </div>

  <div class="basic-info mtop10">
    <h1><%= t('profile_my') %> <span class="red"> <%= t('profile_profile') %></span></h1>
		<% unless @profile.blank? %>
			<%= image_tag asset_path 'basic-info-bot-bar.png' %>
		</div>

		<div class="w100">
			<div class="p-holder mtop30">
				<div class="profile-left">
					<% if profile_image != false %>
						<%= image_tag profile_image.photo.url %>
					<% else %>
						<%= image_tag asset_path "dashboard-img.png" %>
					<% end %>
				</div>
				<div class="profile-right">

					<h1><%= @profile.full_name %></h1>

					<h2><%= @profile.full_address %> </h2>

					<h2>PH : <%= @profile.phone %></h2>

					<h3>Email: <a href="#"><%= @profile.user.email %></a></h3>

				</div>
			</div>

			<div class="profile-holder p-bot">

				<div class="profile-name-heading"><%= t('profiles.name') %></div>
				<div class="profile-name-content"><strong><%= @profile.full_name %></strong></div>

			</div>
			<div class="profile-cont">
				<div class="profile-name-heading"><%= t('profiles.address') %></div>
				<div class="profile-name-content"><%= @profile.address %></div>


			</div>
			<div class="profile-cont">
				<div class="profile-name-heading"><%= t('profiles.city') %></div>
				<div class="profile-name-content"><%= @profile.city.name %></div>

			</div>

			<div class="profile-cont">
				<div class="profile-name-heading"><%= t('profiles.region') %></div>
				<div class="profile-name-content"><%= @profile.region.name %></div>

			</div>
			<div class="profile-cont">
				<div class="profile-name-heading"><%= t('profiles.country') %></div>
				<div class="profile-name-content"><%= @profile.country.name %></div>

			</div>
			<div class="profile-cont">
				<div class="profile-name-heading"><%= t('profiles.zip') %></div>
				<div class="profile-name-content"><%= @profile.zip_code %></div>

			</div>
			<div class="profile-cont">
				<div class="profile-name-heading"><%= t('profiles.zip') %></div>
				<div class="profile-name-content"><%= @profile.phone %></div>

			</div>

			<div class="profile-cont">
				<div class="profile-name-content">
				</div>
				<div class="profile-edit"><%= link_to t('link_to.edit'), edit_profile_path(@profile) %> </div>
				<% if current_user.job_seeker? %>
					<div class="profile-edit"><%= link_to t('link_to.done'), :controller => "job_seeker", :action => "dashboard", :id => current_user.id %> </div>
				<% elsif current_user.employer? %>
					<div class="profile-edit"><%= link_to t('link_to.done'), :controller => "employer", :action => "dashboard", :id => current_user.id %> </div>
				<% end %>
			</div>

			<div class="red-btn-new"><a href="#"><%= t('profile_upload') %></a></div>
		<% end %>
	</div>


</div>

</div>



</div>




