<div class="dashboard-content-right">
  <%= form_for(@project, :html =>{ :multipart => true }) do |f| %>
      <% if @project.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
            <ul>
              <% @project.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>


      <div class="head-text"></div>
      <div class="project-inputs">
        <label>Name</label>
        <%= f.text_field :name %>
      </div>
      <!--projects input ends-->
      <div class="project-inputs">
        <label>Small Descrition</label>
        <%= f.text_field :tag_line %>
      </div>
      <!--projects input ends-->
      <div class="project-select">
        <label>Country</label>

        <div id="country_proejct">
          <%= render :partial => "shared/countries", :locals => { :object_collection => "project" } %>
        </div>
      </div>

      <div class="project-select">
        <label>Region</label>

        <div id="regions_project">
          <%= render :partial => "shared/regions", :locals => { :object_collection => "project" } %>
        </div>
      </div>
      <div class="project-select">
        <label>Country</label>

        <div id="cities_project">
          <%= render :partial => "shared/cities", :locals => { :object_collection => "project" } %>
        </div>
      </div>

      <!--projects input ends-->
      <div class="project-select">
        <label>Industry</label>

        <div class="big-select">
          <%= f.select :category_id, options_from_collection_for_select(Category.all, "id", "name") %>
        </div>
      </div>
      <!--project-select ends-->
      <div class="project-inputs">
        <label>Skills</label>
        <%= f.text_field :skill %>

      </div>

      <div class="project-inputs">
        <label>Picture</label>
        <%= fields_for :photo do |image| %>
            <%= image.file_field :image %>
        <% end %>

      </div>
      <!--project-select ends-->

      <!--project-select ends-->
      <div class="project-select">
        <label>Social Links</label>

        <div class="socialz">
          <%= image_tag asset_path 'twitter.png' %>

          <span>twitter/</span>
          <%= f.text_field :twitter_link %>
        </div>
        <div class="socialz">
          <%= image_tag asset_path 'blog.png' %>

          <span>http://</span>
          <%= f.text_field :dig_link %>
        </div>
        <div class="socialz">
          <%= image_tag asset_path 'world.png' %>

          <span>http://</span>
          <%= f.text_field :aol_link %>
        </div>
      </div>
      <!--project-select ends-->
      <div class="presentation">
        <div class="present-detail">
          <label>Presentation</label>

          <div class="present-box">
            <div class="box-left"></div>
            <div class="box-mid">
              <%= f.text_area :description %>
            </div>
            <div class="box-right"></div>
          </div>
          <!--present-box ends-->
        </div>
        <!--present-detail ends-->
      </div>
      <!--presentation ends-->
      <div class="presentation">
        <div class="present-detail">
          <label>Field of Search</label>

          <div class="present-box">
            <div class="box-left"></div>
            <div class="box-mid">
              <%= f.text_area :research %>
            </div>
            <div class="box-right"></div>
          </div>
          <!--present-box ends-->
        </div>
        <!--present-detail ends-->
      </div>
      <!--presentation ends-->

      <div> <%= f.submit "Save" %></div>
      </div>
      <!--dashboard-content-right ends-->


  <% end %>

