<%= form_tag "/projects/search_project", :id => "project_search-form" do %>
    <div class="search-text">
      <%= text_field_tag "search_term" %>
      <div class="search-btn">
        <%= link_to "Search", "javascript:void(0)", :id => "rg_thesis_search_button" %>
      </div>
    </div>
<% end %>

<script type="text/javascript">

    $("#rg_thesis_search_button").click(function () {
        $.post($("form#project_search-form").attr("action"), $("form#project_search-form").serialize(), (function (response) {
            return $(".content-holder").html(response.html);
        }), "json");
        return false;
    });
</script>




