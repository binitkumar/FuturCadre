<%= render :partial => "shared/top_search_ box" %>
<div class="content-holder">
  <div class="basic-info mtop10">
    <h1>Project<span class="red"> Dashboard</span></h1>
    <img src="/assets/basic-info-bot-bar.png" alt=""/>
  </div>

  <div class="dashboard-info-image">

    <div class="pic-project">
      <% if @project.photo != nil %>
          <%= image_tag @project.photo.image.url %>
      <% else %>
          <%= image_tag "/assets/dashboard-img.png" %>
      <% end %>

      <div class="text-of-pic-project"></div>


    </div>
    <!--pic-project ends-->
    <div class="due-projects">
      <div class="h1" style="margin-top:10px; margin-left:5px; width:300px; "><%= @project.users.count %>Members(s)
      </div>
      <div class="images-detail">
        <% unless @project_users.blank? %>
            <% @project_users.each do |pr_user| %>
                <div class="images">
                  <% if user_image(pr_user.user) %>
                      <%= image_tag user_image(pr_user.user).photo.url %>
                  <% else %>
                      <%= image_tag asset_path "dashboard-img.png" %>
                  <% end %>
                </div>
            <% end %>
        <% end %>
      </div>
    </div>
    <!--due projects ends-->
    <% if user_signed_in? && current_user.id == @project.owner_id %>
        <div class="text-btn" onclick="invite_user('<%= @project.id%>')">Invite Members</div>
    <% end %>
  </div>
  <!--dashboard-info-image ends-->
  <!--Left image portion ends-->

  <div class="dashboard-mid">
    <div class="result-contents-info">
      <h1><%= @project.name %></h1>

      <h3 style="margin-top:5px;"><%= @project.tag_line %></h3>
      <h4> <%= @project.city.name %> |<%= @project.created_at.strftime("%d %b. %Y") %>
        |<%= @project.category.name %></h4>
    </div>
    <!--result contents ends-->
    <div class="detail-info">
      <h1 style="margin-top:10px;">Description</h1>

      <div class="present-box" style="margin-top:10px; margin-left:0;">
        <div class="box-left"></div>
        <div class="box-mid">


          <p><%= @project.description %> </p></div>
        <div class="box-right"></div>
      </div>
      <!--present-box ends-->
      </br> </br></br>
      <div class="present-box" style="margin-top:10px; margin-left:0;">
        <div class="box-left"></div>
        <div class="box-mid">

          <p><%= @project.research %></p>
        </div>
        <div class="box-right"></div>
      </div>
      <!--present-box ends-->


    </div>
    <!--detail info ends-->

  </div>
  <!--dashboard mid ends-->
  <div class="dashboard-right-info">
    <h1 style="float:right; margin-right:20px;"></h1>

    <div class="select-button">
      <% if user_signed_in? %>
          <% if current_user.projects.include?(@project) == false && current_user.id != @project.owner_id %>

              <div class="left-holder"></div>
              <div class="mid-holder" onclick="proj_invite('<%= @project.id%>')"><%= link_to "Request to Join", "javascript:void(0)" %></div>
              <div class="right-holder"></div>

          <% end %>
      <% else %>
          <div class="left-holder"></div>
          <div class="mid-holder" onclick="proj_invite('<%= @project.id%>')"><%= link_to "Request to Join", "javascript:void(0)" %></div>
          <div class="right-holder"></div>


          <!--select button ends-->
      <% end %>
    </div>
  </div>


</div>

<div id="popup_holder"></div>


<script type="text/javascript">

    function invite_user(proj_id) {
    <%if user_signed_in?%>
        {
            url = "/projects/invite_users?id=" + proj_id;
            $.ajax({
                context:this,
                url:url,
                type:"GET",
                data:$(this).serialize(),
                dataType:"json",
                success:function (response) {
                    $("#popup_holder").html(response.html);
                }
            });

            return false;
        }
    <%else%>
        {
            alert("You need to sign-in");
        }
    <%end%>

    }


    function proj_invite(proj_id) {


    <%if user_signed_in?%>
        {

            url = "/projects/project_request?id=" + proj_id;
            $.ajax({
                context:this,
                url:url,
                type:"GET",
                data:$(this).serialize(),
                dataType:"json",
                success:function (response) {
                    $("#popup_holder").html(response.html);
                }
            });

            return false;
        }
    <%else%>
        {
            alert("You need to sign-in");
        }
    <%end%>

    }
</script>










































