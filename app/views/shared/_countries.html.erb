<script language="JavaScript">
	function get_regions(th){
       var cont = $(th).val();
//       var trigerList = $("div[id^='regions']");
//       var id = $(this).next("#div").attr("id");
      	$.ajax({
	    context: this,
	    url: "/search/get_regions?country_id="+cont,
	    type: "GET",
	    data: $(this).serialize(),
	    dataType: "json",
	    success: function(response) {
       $("#regions").html(response.html);
        $("#regions_search").html(response.html);
        $("#regions_org").html(response.html);
	    }
	});
	}
</script>
<%= select_tag "country_id", options_from_collection_for_select(Country.all, "id", "name"), :class => "slt-div",  :onChange => "get_regions(this)" %>
