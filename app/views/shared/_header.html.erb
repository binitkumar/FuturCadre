<%= javascript_include_tag "hoverIntent.js", "superfish.js" %>

<div class="logo">
  <%= link_to image_tag(asset_path 'logo.png'), root_url %>
</div>

<div class="language">
  <%= link_to image_tag(asset_path 'flag-1.png'), change_laguage_home_index_path(:locale => "en") %>
  <%= link_to image_tag(asset_path 'flag-2.png'), change_laguage_home_index_path(:locale => "fr") %>
</div>

<ul class="sf-menu">
  <% if user_signed_in? %>
      <li class="<%= params[:action] == "dashboard" ? 'active' : '' %>">
        <%= link_to "Home", "/#{current_user.role}/dashboard" %>
      </li>
  <% end %>
  <li class="<%= params[:controller] == "home" && params[:action] == "index" ? 'active' : '' %>">
    <%= link_to t('header.find_jobs'), root_url %>
  </li>
  <li class="<%= params[:controller] == "groups" ? 'active' : '' %>">
    <%= link_to t('header.group'), nil, :id=>'b' %>
    <ul>
      <li id="a">  <%= link_to "School Group", groups_path(:locale => "school") %> </li>
      <li>  <%= link_to "Job Group", groups_path(:locale => "job") %> </li>
    </ul>
  </li>
  <li class="<%= params[:controller] == "theses" ? 'active' : '' %>">
    <%= link_to "Thesis", theses_path() %>
  </li>
  <li class="<%= params[:controller] == "projects" ? 'active' : '' %>">
    <%= link_to "Projects", projects_path() %>
  </li>

  <% unless user_signed_in? %>
      <li class="<%= params[:role].present? && params[:role] == "job_seeker" ? 'active' : '' %>">
        <%= link_to t('Register'), sign_up_path(:role => "job_seeker") %>
      </li>

  <% end %>
</ul>

<div class="login-holder">
  <% if user_signed_in? %>
      <div class="welcome">welcome, <span class="bold"><%= current_user.name %></span></div>
      <ul class="setting">
        <% profile_url = current_user.profile.present? ? profile_path(current_user.profile) : new_profile_path %>
        <li><%= link_to t('home_account'), profile_url %> |</li>
        <li><%= link_to "Help" %> |</li>
        <li><%= link_to t('home_logout'), sign_out_path %></li>
      </ul>
  <% else %>
      <% @user = User.new %>
      <%= form_for(@user, :as => @user, :url => session_path(@user)) do |f| %>
          <div class="login-input">
            <%= f.email_field :email %>
          </div>
          <div class="login-password">
            <%= f.password_field :password %>
            <%= f.submit "Login" %>
          </div>
      <% end %>
      <div class="recovery">
        <%= link_to t('header.forgot_password'), password_recovery_path %>
      </div>
  <% end %>
</div>

<script type="text/javascript">

    jQuery(function () {
        jQuery('ul.sf-menu').superfish();
    });
</script>

