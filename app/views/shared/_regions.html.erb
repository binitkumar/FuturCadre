<script language="JavaScript">
	function get_cities(th){
        var cities = $(th).val();
       	$.ajax({
	    context: this,
	    url: "/search/get_cities?region_id="+cities,
	    type: "GET",
	    data: $(this).serialize(),
	    dataType: "json",
	    success: function(response) {
           $("#cities").html(response.html);
          $("#cities_search").html(response.html);
          $("#cities_org").html(response.html);
//             $(th).parent().closest("div").html(response.html);
//             $(th).parent().closest("div").html(response.html);
	    }
	});
	}
</script>
<% collection = @regions.present? ? @regions : Country.first.regions %>
<%= select_tag "region_id", options_from_collection_for_select(collection, "id", "name"), :class => "slt-sub-div", :onChange => "get_cities(this)" %>
