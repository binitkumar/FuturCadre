<div class="reg-tab-holder">
	<div class="reg-tab-holder-new tab-act">
		<div class="reg-left-tab-holder"></div>
		<div class="reg-mid-tab-holder">Register as <%= @role.name.humanize.titleize %></div>
		<div class="reg-right-tab-holder"></div>
	</div>
</div>

<div class="basic-info">
	<h1><span class="red">Account</span> Information</h1>
	<%= image_tag asset_path 'basic-info-bot-bar.png' %>
</div>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>
	<div class="sign-in-input-holder mtop60">
		<label>User Name</label>
		<%= f.text_field :name %>
		<p>Avalable !!</p>
	</div>
	<div class="sign-in-input-holder">
		<label>Email</label>
		<%= f.email_field :email %>
		<p>This would be the primaray email used by the application</p>
	</div>
	<div class="sign-in-input-holder">
		<label>Password</label>
		<%= f.password_field :password %>
		<p>Password should be at least 7 cherecters long</p>
	</div>
	<div class="sign-in-input-holder">
		<label>Confirm Password</label>
		<%= f.password_field :password_confirmation %>
		<p>Re-enter password for avoiding typo mistakes</p>
	</div>

	<div class="reg-left-holder">
		<div class="words-holder">Enter both the words written below separated by single space</div>
		<div class="words-img">
			<%= image_tag asset_path 'word-img.png' %>
		</div>
		<div class="reg-input-holder">
			<input type="text" value="">
		</div>
	</div>

	<div class="reg-right-holder">
		<div class="checkbox">
			<input type="checkbox">
			<label>I have read the privacy policy and agreeing on the
									terms and conditions</label>
		</div>
		<%= f.hidden_field :role_id,:value => @role.id  %>
		<div class="reg-me"><a href="#">Register Me</a></div>

	</div>
<% end %>